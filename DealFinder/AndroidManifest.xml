<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dealfinder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />
    	
   	<uses-feature android:glEsVersion="0x00020000" android:required="true"/> <!-- recommended for maps applications -->    	
    
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name=".Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FeaturedDeals"
            android:label="@string/app_name_featured" >
            <intent-filter>
                <action android:name="com.example.dealfinder.FEATUREDDEALS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Deal"
            android:label="@string/app_name_deal" >
            <intent-filter>
                <action android:name="com.example.dealfinder.DEAL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SendOrder"
            android:label="@string/app_name_deal" >
            <intent-filter>
                <action android:name="com.example.dealfinder.SENDORDER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Search"
            android:label="@string/app_name_search" >
            <intent-filter>
                <action android:name="com.example.dealfinder.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StoresList"
            android:label="@string/app_name_store_list" >
            <intent-filter>
                <action android:name="com.example.dealfinder.STORESLIST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StoreMap"
            android:label="@string/app_name_store_list" >
            <intent-filter>
                <action android:name="com.example.dealfinder.STOREMAP" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MapViewActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.dealfinder.MAPVIEWACTIVITY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <meta-data
    		android:name="com.google.android.maps.v2.API_KEY"
    		android:value="AIzaSyCxsxkNef6I7ITSl0lnZPQBc_iBNg_rw0s"/>        
    	
    	<meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />
        
        <service
            android:name="com.example.dealfinder.location.ReceiveUpdatesIntentService"
            android:label="@string/app_name"
            android:exported="false"></service>    		
    	
        </application>
</manifest>